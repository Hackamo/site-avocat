{
	"name": "site-avocat",
	"version": "0.1.0",
	"scripts": {
		"ng": "ng",
		"start": "ng serve",
		"start:en": "ng serve --configuration=en --port=4201",
		"build": "ng build",
		"build:en": "ng build --configuration=en",
		"build:all": "ng build --configuration=production --localize",
		"build:github-pages": "ng build --configuration=github-pages",
		"extract-i18n": "ng extract-i18n --output-path src/locale",
		"watch": "ng build --watch --configuration development",
		"test": "ng test",
		"serve:static": "cd dist && node ../server-static.js",
		"serve:ssr:site-avocat": "node dist/site-avocat/server/server.mjs",
		"format": "prettier --write \"src/**/*.{ts,html,scss,css,json}\"",
		"deploy": "npm run build:github-pages && ng deploy",
		"deploy:gh": "ng build --configuration=production --base-href=// && npx angular-cli-ghpages --dir=dist/browser/fr",
		"convert:webp": "node scripts/convert-webp.js",
		"resize:blog-images": "node scripts/resize-blog-images.js"
	},
	"private": true,
	"packageManager": "npm@11.8.0",
	"dependencies": {
		"@angular/animations": "^21.1.1",
		"@angular/cdk": "~21.1.1",
		"@angular/common": "^21.1.1",
		"@angular/compiler": "^21.1.1",
		"@angular/core": "^21.1.1",
		"@angular/forms": "^21.1.1",
		"@angular/material": "^21.1.1",
		"@angular/platform-browser": "^21.1.1",
		"@angular/platform-server": "^21.1.1",
		"@angular/router": "^21.1.1",
		"@angular/ssr": "^21.1.2",
		"@emailjs/browser": "^4.4.1",
		"@types/marked": "^5.0.2",
		"express": "^5.2.1",
		"marked": "^17.0.1",
		"material-symbols": "^0.40.2",
		"rxjs": "~7.8.2",
		"tslib": "^2.8.1"
	},
	"devDependencies": {
		"@angular/build": "^21.1.2",
		"@angular/cli": "^21.1.2",
		"@angular/compiler-cli": "^21.1.1",
		"@angular/localize": "^21.1.1",
		"@types/express": "^5.0.6",
		"@types/node": "^25.0.10",
		"angular-cli-ghpages": "^3.0.2",
		"glob": "^13.0.0",
		"jsdom": "^27.4.0",
		"prettier": "^3.8.1",
		"sharp": "^0.34.5",
		"typescript": "~5.9.3",
		"vitest": "^4.0.18"
	}
}
