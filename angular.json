{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"cli": {
		"packageManager": "npm",
		"analytics": false
	},
	"newProjectRoot": "projects",
	"projects": {
		"site-avocat": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss"
				}
			},
			"root": "",
			"sourceRoot": "src",
			"prefix": "app",
			"i18n": {
				"sourceLocale": "fr",
				"locales": {
					"en": {
						"translation": "src/locale/messages.en.xlf"
					}
				}
			},
			"architect": {
				"build": {
					"builder": "@angular/build:application",
					"options": {
						"outputPath": "dist/",
						"index": "src/index.html",
						"browser": "src/main.ts",
						"baseHref": "/",
						"tsConfig": "tsconfig.app.json",
						"inlineStyleLanguage": "scss",
						"assets": [
							{
								"glob": "**/*",
								"input": "public",
								"output": "/"
							},
							{
								"glob": "**/*",
								"input": "src/assets",
								"output": "assets"
							}
						],
						"styles": ["src/styles.scss"],
						"server": "src/main.server.ts",
						"prerender": true,
						"ssr": {
							"entry": "src/server.ts"
						},
						"polyfills": ["@angular/localize/init"]
					},
					"configurations": {
						"production": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "1.5MB",
									"maximumError": "2MB"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "8kB",
									"maximumError": "12kB"
								}
							],
							"optimization": true,
							"outputHashing": "all",
							"sourceMap": false,
							"namedChunks": false,
							"aot": true,
							"extractLicenses": true,
							"ssr": false,
							"prerender": true,
							"localize": false
						},
						"github-pages": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "1.5MB",
									"maximumError": "2MB"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "8kB",
									"maximumError": "12kB"
								}
							],
							"outputPath": "dist/site-avocat",
							"baseHref": "/site-avocat/",
							"optimization": true,
							"outputHashing": "all",
							"sourceMap": false,
							"namedChunks": false,
							"aot": true,
							"extractLicenses": true,
							"prerender": true,
							"localize": false
						},
						"development": {
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true,
							"localize": true
						},
						"en": {
							"localize": ["en"]
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular/build:dev-server",
					"configurations": {
						"production": {
							"buildTarget": "site-avocat:build:production"
						},
						"development": {
							"buildTarget": "site-avocat:build:development"
						},
						"development-fr": {
							"buildTarget": "site-avocat:build:development-fr",
							"port": 4200
						},
						"development-en": {
							"buildTarget": "site-avocat:build:development-en",
							"port": 4201
						},
						"en": {
							"buildTarget": "site-avocat:build:en"
						}
					},
					"defaultConfiguration": "development"
				},
				"test": {
					"builder": "@angular/build:unit-test"
				},
				"deploy": {
					"builder": "angular-cli-ghpages:deploy",
					"configurations": {
						"github-pages": {
							"buildTarget": "site-avocat:build:github-pages",
							"baseHref": "/site-avocat/",
							"dir": "dist/site-avocat/browser"
						}
					},
					"defaultConfiguration": "github-pages"
				}
			}
		}
	}
}
